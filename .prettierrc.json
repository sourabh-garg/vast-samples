{
    "parser": "typescript",
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "arrowParens": "avoid",
    "tabWidth": 4,
    "overrides": [
        {
            "files": [".*", "*.json"],
            "options": { "parser": "json" }
        },
        {
            "files": ["*.js"],
            "options": { "parser": "typescript" }
        },
        {
            "files": ["*.ts"],
            "options": {
                "parser": "typescript"
            }
        }
    ]
}
